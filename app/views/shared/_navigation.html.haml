- if user_signed_in?
  %ul.nav
    %li{class: controller_name == 'actions' && 'active'}
      = link_to('Actions', actions_path)
    %li{class: controller_name == 'templates' && 'active'}
      = link_to('Goals', templates_path)
  %ul.nav.pull-right
    %li.dropdown
      = link_to  "#", {:class => "dropdown-toggle", :"data-toggle" => "dropdown"} do
        = current_user.name
        %b.caret
      %ul.dropdown-menu
        %li= link_to('Edit account', edit_user_registration_path)
        %li.divider
        %li= link_to('Logout', destroy_user_session_path, :method=>'delete')
- else
  %ul.nav
    %li{class: controller_name == 'sessions' && 'active'}
      = link_to('Sign in', new_user_session_path)
    %li{class: controller_name == 'registrations' && 'active'}
      = link_to('Sign up', new_user_registration_path)