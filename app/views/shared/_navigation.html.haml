  //    = link_to('My Publications', user_publications_path(current_user.id), {:style=> "text-shadow: none"})
  %ul.nav.pull-right
    %li.dropdown
      = link_to  "#", {:class => "dropdown-toggle", :"data-toggle" => "dropdown",:style=> "text-shadow: none; padding-bottom: 0px"} do
        %span
          = image_tag current_user.profile_image_url, {:style=>"max-height: 30px"} if current_user.profile_image_url
          %span{:style => 'padding-left: 5px; padding-right: 5px'}
            = current_user.name
            %b.caret{:style => 'opacity: 1; border-top-color: black'}
      %ul.dropdown-menu
        %li= link_to('Edit account', edit_user_registration_path)
        %li.divider
        %li= link_to('Logout', destroy_user_session_path, :method=>'delete')
- else
  %ul.nav.pull-right
    %li{class: controller_name == 'sessions' && 'active'}
      = link_to('Sign in', new_user_session_path)
    %li{class: controller_name == 'registrations' && 'active'}
      = link_to('Sign up', new_user_registration_path)