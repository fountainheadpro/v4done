= form_for(@action_list) do |f|
  - if @action_list.errors.any?
    #error_explanation
      %h2
        = pluralize(@action_list.errors.count, "error")
        prohibited this action_list from being saved:
      %ul
        - @action_list.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :goal
    %br/
    = f.text_field :goal
  .actions
    = f.submit
