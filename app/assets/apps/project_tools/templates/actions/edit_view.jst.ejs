<div class="action row-fluid">
  <div class="action_status">
    <input type='checkbox' "action[#{action.id}]", 1, action.completed?
  = link_to (action.leaf? ? "#" : project_action_actions_path(@project, action)) do
    .action_info
      = label_tag "action[#{action.id}]", action.title
    - unless action.leaf?
      .action_details
        %i{class: "icon-chevron-right"}
  .description
    = action.description
   </div>
</div>