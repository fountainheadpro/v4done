<div class="action_status">
  <input type='checkbox' class='status' id="action[<%= id %>]" <%= completed ? 'checked="checked"' : '' %> />
</div>
  <div class='action_info'>
    <label><%= title %></label>
  </div>
  <% if (!leaf) { %>
    <div class='action_details'>
      <%= child_count %> <i class="icon-chevron-right"></i>
    </div>
  <% } %>
<% if (description != null && description != '') { %>
  <div class="description">
    <%= description %>
  </div>
<% } %>