<% if (typeof subitemsCount !== "undefined" && subitemsCount !== null) {%>
  <a href="#<%= template_id %>/items/<%= _id %>/items" class="label"><%= subitemsCount %> items</a>
<% } %>
<div class="title">
  <textarea name="title" rows="1" placeholder="Write your action title and hit enter"><%= title %></textarea>
</div>
<div class="description" style="display: <%= description == '' ? 'none':'block' %>">
  <textarea name="description" rows="2" placeholder="Description"><%= description %></textarea>
</div>